@model SportsCampaign.Models.CampaignBookedInfo

@{
    ViewBag.Title = "Booking Information";
    Layout = "~/Views/_UserLayoutPage.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Campaign Booking Information</legend>

        <div class="editor-label">
           Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PlayerName)
            @Html.ValidationMessageFor(model => model.PlayerName)
        </div>
        <br />
        <div class="editor-label">
           Age
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.PlayerAge)
            @Html.ValidationMessageFor(model => model.PlayerAge)
        </div>
        <br />
        <div class="editor-label">
           Campaign
        </div>
        <div class="editor-field">
            @Html.DropDownList("campaign")
            @Html.ValidationMessageFor(model => model.campaignID)
        </div>
        <br />
        <div class="editor-label">
            Cell Number
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ContactNumber)
            @Html.ValidationMessageFor(model => model.ContactNumber)
        </div>
        <br />
        <div class="editor-label">
           Catagory
        </div>
        <div class="editor-field">
            @Html.DropDownList("catagory")
            @Html.ValidationMessageFor(model => model.catagoryID)
        </div>
        <br />
        <div class="editor-label">
           Medical Restriction
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MedicalCondition)
            @Html.ValidationMessageFor(model => model.MedicalCondition)
        </div>

        <p>
            <input type="submit" value="Book Now" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index","Home")
</div>

