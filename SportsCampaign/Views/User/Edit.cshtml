@model SportsCampaign.Models.UserTable

@{
    ViewBag.Title = "Set Role";
    Layout = "~/Views/_AdminLayoutPage.cshtml";
}


@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Set Role</legend>

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
           User Name
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.userName)
            @Html.ValidationMessageFor(model => model.userName)
        </div>

        <div class="editor-label">
          Password
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.userPassword)
            @Html.ValidationMessageFor(model => model.userPassword)
        </div>

        <div class="editor-label">
           User Type
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.userType)
            @Html.ValidationMessageFor(model => model.userType)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index","Admin")
</div>

